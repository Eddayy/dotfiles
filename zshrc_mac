function dockerinit() {
    eval "$(boot2docker shellinit)"
}

hash -d desktop="/Users/reorx/Desktop"
hash -d music="/Users/reorx/Music"
hash -d pictures="/Users/reorx/Pictures"
hash -d downloads="/Users/reorx/Downloads"
hash -d documents="/Users/reorx/Documents"
hash -d dropbox="/Users/reorx/Dropbox"
hash -d workspace="/Users/reorx/Workspace"
hash -d services="/Users/reorx/Services"

hash -d archive="/Users/reorx/Workspace/archive"
hash -d lab="/Users/reorx/Workspace/lab"
hash -d wdj="/Users/reorx/Workspace/wdj"
hash -d repos="/Users/reorx/Workspace/repos"

alias finder_show='defaults write com.apple.finder AppleShowAllFiles YES'
alias finder_hide='defaults write com.apple.finder AppleShowAllFiles NO'
alias komodo="/Applications/Komodo\ Edit\ 8.app/Contents/MacOS/komodo-bin"
alias nwjs="/Applications/nwjs.app/Contents/MacOS/nwjs"
