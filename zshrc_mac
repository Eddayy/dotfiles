function dockerinit() {
    eval "$(boot2docker shellinit)"
}

hash -d desktop="/Users/reorx/Desktop"
hash -d music="/Users/reorx/Music"
hash -d pictures="/Users/reorx/Pictures"
hash -d downloads="/Users/reorx/Downloads"
hash -d documents="/Users/reorx/Documents"
hash -d dropbox="/Users/reorx/Dropbox"
